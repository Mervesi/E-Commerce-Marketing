@model OrnekE_Ticaret.ViewModel.RegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        @if (ViewBag.Message != null)
        {
            <div class="vard-header bg-danger text-light pt-3 pl-3">
                <p>@ViewBag.Message</p>
            </div>
        }
        <div class="card-body p-0 ">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user", autocomplete = "off" }))
                        {
                            <form class="user">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-user", placeholder = "Name" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-user", placeholder = "Last Name" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", placeholder = "Email" })
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-user", placeholder = "Password", type = "password" })
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(x => x.RepeatPassword, new { @class = "form-control form-control-user", placeholder = "Repeat Password", type = "password" })
                                    </div>
                                </div>
                                    @*<div class="form-group row">
                                        <div class="col-sm-3 mb-3 mb-sm-0">
                                            <label>Admin</label>
                                        </div>
                                        <div class="col-sm-3">
                                            @Html.RadioButtonFor(m => m.UserRoleID, "1")
                                        </div>
                                        <div class="col-sm-3 mb-3 mb-sm-0">
                                            <label>Customer</label>
                                        </div>
                                        <div class="col-sm-3">
                                            @Html.RadioButtonFor(m => m.UserRoleID, "2")
                                        </div>
                                    </div>*@
                                
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Register Account" />
                                <hr>

                            </form>
                        }

                        <hr>
                        @*<div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>*@
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login","Account")">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
