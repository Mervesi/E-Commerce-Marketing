@model OrnekE_Ticaret.Models.Product
@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnCreateProduct").click(function () {
            var categoryId = document.getElementById("CategoryID").value;

            var categoryName = document.getElementById("CategoryID").innerText;
            $("#create").load("../Admin/CreateProduct/" + categoryId);
            //document.getElementById("PageHeader").innerText = "'" + categoryName + "' kategorisindeki ürünler'";
        });
    });

</script>
<div class="row" id="create">
    <div class="card shadow">
        <div class="card-body">
            <div class="form-group">
                @using (Html.BeginForm("CreateProduct", "Admin", FormMethod.Post, new { enctype = "multipart/from-data" }))
                {
                    <form class="product">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control form-control-product", placeholder = "Ürün Adı" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control form-control-product", placeholder = "Fiyat" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="CategoryID">Kategoriler</label>
                            @Html.DropDownList("Categories", null, new { @class = "form-control", id = "CategoryID" })
                        </div>
                        @*<div class="form-group">
                                <input type="file" name="ImageFile" required />
                                @Html.ValidationMessageFor(model=>model.ProductPicture)

                            </div>*@

                        <input type="submit" class="btn btn-danger " value="Ekle" id="btnCreateProduct" />

                    </form>
                }
            </div>
        </div>
    </div>
</div>

